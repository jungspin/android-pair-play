<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PairPlay" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second</item>
        <item name="colorSecondaryVariant">@color/second</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:colorPrimary">@color/main</item> <!--선택 색상-->
        <item name="colorSurface">@color/light</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/img_splash</item>
    </style>


</resources>